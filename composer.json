{
    "name": "douglasgreen/code-linter",
    "description": "Code linter for PHP based on Nikic parser",
    "type": "library",
    "keywords": [
        "ast",
        "automation",
        "cli",
        "code quality",
        "coding standards",
        "linter",
        "linting",
        "php",
        "php parser",
        "static analysis"
    ],
    "homepage": "https://github.com/douglasgreen/code-linter",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "nikic/php-parser": "^5.1"
    },
    "require-dev": {
        "douglasgreen/config-setup": "dev-main",
        "phpstan/phpstan": "^1.11.9",
        "rector/rector": "^1.2.2",
        "symplify/easy-coding-standard": "^12.3.4"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\PhpLinter\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/douglasgreen/config-setup"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "check-style",
            "ecs",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector"
        ],
        "post-install-cmd": "config-setup",
        "post-update-cmd": "config-setup"
    },
    "bin": [
        "bin/check-style"
    ]
}
